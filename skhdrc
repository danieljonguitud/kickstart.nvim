# Changing window focus

alt - up : yabai -m window --focus north
alt - down : yabai -m window --focus south
alt - left : yabai -m window --focus west
alt - right : yabai -m window --focus east

# balance out tree of windows (resize to occupy the same area)
shift + cmd - b : yabai -m space --balance

# swap windows
shift + alt - left : yabai -m window --swap west
shift + alt - right : yabai -m window --swap east

# yabai services
ctrl + alt + cmd - r : yabai --restart-service
ctrl + alt + cmd - x : yabai --stop-service
ctrl + alt + cmd - s : yabai --start-service

# stop changing windows
cmd - tab : :
